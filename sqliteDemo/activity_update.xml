<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.sqllightdemo.Activity.UpdateActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Enter App Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:id="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Delete"
        android:layout_width="@dimen/activity_app_display_width"
        android:layout_height="@dimen/activity_app_display_height"
        android:layout_below="@+id/etName"
        android:layout_marginTop="46dp"
        android:id="@+id/btdelete" />

    <Button
        android:text="Update"
        android:layout_width="@dimen/activity_app_display_width"
        android:layout_height="@dimen/activity_app_display_height"
        android:id="@+id/btupdate"
        android:layout_alignBaseline="@+id/btdelete"
        android:layout_alignBottom="@+id/btdelete"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
